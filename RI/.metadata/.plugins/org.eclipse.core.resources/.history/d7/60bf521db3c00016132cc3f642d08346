package uo.ri.ui.admin.action;

import alb.util.console.Console;
import alb.util.menu.Action;
import uo.ri.common.BusinessException;
import uo.ri.conf.ServicesFactory;

public class UpdateRepuestoAction implements Action {
	@Override
	public void execute() throws BusinessException {

		// Pedir datos
		Long id = Console.readLong("Id del repuesto");
		String nombre = Console.readString("Nuevo precio");
		String apellidos = Console.readString("Apellidos");

		ServicesFactory.getAdminService().updateMechanic(id, nombre, apellidos);

		// Mostrar resultado
		Console.println("Mec√°nico actualizado");

	}
}
