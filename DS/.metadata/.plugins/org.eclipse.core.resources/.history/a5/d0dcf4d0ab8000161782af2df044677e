package parte2;

// Alquiler

public class Rental {
	private Movie movie;
	private int days;

	public Rental(Movie movie, int days) {
		this.movie = movie;
		this.days = days;
	}

	public int getDays() {
		return days;
	}

	public Movie getMovie() {
		return movie;
	}

	double getPrice() {
		return movie.getPrice(this);
	}

	int getPoints() {
		// 2) Cada alquiler da 1 punto. Punto extra para novedades alquiladas 2+ días
		int points = 1;
		if ((getMovie().getCategory() == Movie.NEW_RELEASE) && getDays() > 1)
			points = 2;
		return points;
	}

}
