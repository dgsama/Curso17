package parte2;

// Alquiler

public class Rental {
	private Movie movie;
	private int days;

	public Rental(Movie movie, int days) {
		this.movie = movie;
		this.days = days;
	}

	public int getDays() {
		return days;
	}

	public Movie getMovie() {
		return movie;
	}

	public void getPrice() {
		double price = 0;

		switch (getMovie().getCategory()) {
		case Movie.NEW_RELEASE:
			price += getDays() * 3;
			break;
		case Movie.REGULAR:
			price += 2;
			if (getDays() > 2)
				price += (getDays() - 2) * 1.5;
			break;
		case Movie.CHILDRENS:
			price += 1.5;
			if (getDays() > 3)
				price += (getDays() - 3) * 1.5;
			break;
		}

		return price;
	}
}
