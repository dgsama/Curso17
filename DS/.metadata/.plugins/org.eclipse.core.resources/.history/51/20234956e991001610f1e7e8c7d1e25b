package campos;

import clase4.CampoAbstracto;
import comprobaciones.Comprobacion;

public class CampoCodigoPostal extends CampoAbstracto {

	public CampoCodigoPostal(String etiqueta, Comprobacion... comprobaciones) {
		super(etiqueta, comprobaciones);
		// TODO Auto-generated constructor stub
	}

	@Override
	public boolean comprobar() {
		boolean valido = true;
		for (char ch : getString().toCharArray()) {
			if (!Character.isDigit(ch)) {
				valido = false;
				break;
			}
		}
		if (valido == true) {
			if (getString().length() != 5) {
				valido = false;
			}
		}

		return valido;
	}

}
