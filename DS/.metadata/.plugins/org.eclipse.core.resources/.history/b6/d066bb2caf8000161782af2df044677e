package tipo;

import parte2.Movie;

public class Childrens extends Movie {

	private static final double price = 1.5;

	public Childrens(String title, int category) {
		super(title, category);
	}

	public double getPrice(int days) {
		double total = 0;
		total += 1.5;
		if (days > 3) {
			total += (days - 3) * price;
		}
		return total;
	}
}
