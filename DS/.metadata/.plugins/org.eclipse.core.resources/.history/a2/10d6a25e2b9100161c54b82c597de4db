package clase4;

public class ComprobacionEdad {

	private String edad;

	public ComprobacionEdad(String edad) {
		this.edad = edad;
	}

	public boolean comprobar() {
		boolean valido = true;

		for (char ch : edad.toCharArray()) {
			if (!Character.isDigit(ch)) {
				valido = false;
				break;
			}
		}
		if(valido == true){
			if(Integer.parseInt(edad)<18){
				valido = false;
			}
		}
		
		return valido;
	}

}
