package outputs;

import java.io.*;
import decorators.Decorator;

public class Bluetooth implements Output {
	
	private Decorator decorator;
	
	public Bluetooth(String device, Decorator decorator) {
		this.decorator = decorator;
		stringWriter = new StringWriter();
		stringWriter.append("\n--- START Bluetooth[" + device + "]\n");
	}

	public void send(char c) throws IOException {
		stringWriter.append(c);
	}

	public void close() throws IOException {
		String aux = stringWriter.toString();
		
		System.out.print(aux.toString());
		System.out.println("--- END   Bluetooth");
	}

	private StringWriter stringWriter;
}
