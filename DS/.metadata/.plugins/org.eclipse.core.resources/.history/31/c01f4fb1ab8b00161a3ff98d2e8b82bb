package figuras;

public class Circulo extends Figura {

	private Point centro;
	private int radio;
	private int x;
	private int y;// int x,y; Coordenadas del lugar donde se ha pinchado el
					// ratón

	double distancia = Math.sqrt(Math.pow(x - centro.x, 2)
			+ Math.pow(y - centro.y, 2));
	boolean pinchado = distancia < radio;

	public double distancia() {
		double aux = 0;

		aux = Math.sqrt(Math.pow(x - centro.getX(), 2)
				+ Math.pow(y - centro.getY(), 2));

		return aux;
	}

	@Override
	public boolean hePinchado() {
		// TODO Auto-generated method stub
		return false;
	}

}
