package decorators;

public class Normalizer extends AbstractDecorator {

	public Normalizer(Decorator decorator) {
		super(decorator);
	}

	@Override
	public char format(char c) {
		char aux = c;
		if (decorator != null) {
			if (aux == '\r') {
				return 0;
			}
		}
		return aux;
	}

	@Override
	public String format2(String str) {
		String aux = str;
		if (decorator != null) {
			if (aux == '\r') {
				return 0;
			}
		}
		return aux;
	}

}
