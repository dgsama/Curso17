package clase4;

import java.io.*;
import java.util.ArrayList;

import comprobaciones.Comprobacion;

public abstract class CampoAbstracto implements Campo{
	private String etiqueta;
	private String texto;
	private ArrayList<Comprobacion> comprobaciones;

	public CampoAbstracto(String etiqueta) {
		this.etiqueta = etiqueta;
		comprobaciones = new ArrayList<Comprobacion>();
	}

	public void pideDato() {
		BufferedReader consola = new BufferedReader(new InputStreamReader(System.in));

		boolean valido;
		do {
			valido = true;
			try {
				System.out.print(etiqueta + ": ");
				texto = consola.readLine();

				valido = comprobar();
			} catch (IOException ex) {
				System.out.println(ex);
			}
		} while (!valido);
	}

	public String getString() {
		return texto;
	}
}
